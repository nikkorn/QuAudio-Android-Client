<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="55dip"
    android:orientation="horizontal" >

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="55dip"
        android:layout_alignParentLeft="true"
        android:orientation="vertical"
        android:id="@+id/libraryItemLayout">

        <TextView
            android:id="@+id/LibraryTrackName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dip"
            android:paddingTop="4dp"
            android:paddingLeft="5dp"
            android:singleLine="true" />
        <TextView
            android:id="@+id/LibraryTrackAlbum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dip"
            android:paddingBottom="4dp"
            android:paddingLeft="5dp"
            android:singleLine="true"/>

    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/libraryUploadButtonLayout"
        android:layout_width="38dp"
        android:layout_height="55dip"
        android:orientation="vertical"
        android:layout_alignParentRight="true">

        <Button
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/uploadTrackButton"
            android:background="@drawable/qu_orange_upload"/>
    </LinearLayout>

</RelativeLayout>