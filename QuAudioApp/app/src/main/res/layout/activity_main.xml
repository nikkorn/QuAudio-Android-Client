<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuAppActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:id="@+id/main_activity_linear_layout"
        android:background="#ffffff">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/qu_mini_logo"
            android:padding="5dp"
            android:layout_gravity="center"/>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="5dp"
            android:stretchColumns="*">
            <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <Button
                    android:layout_height="40dp"
                    android:layout_width="0dp"
                    android:text="LIBRARY"
                    android:id="@+id/library_menu_button"
                    android:layout_alignParentTop="true"
                    android:onClick="MenuButtonPressed"
                    android:background="@drawable/qu_orange_background"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:layout_marginRight="5dp"
                    android:textColor="#ffffff" />
                <Button
                    android:layout_height="40dp"
                    android:layout_width="0dp"
                    android:text="PLAYLIST"
                    android:id="@+id/playlist_menu_button"
                    android:layout_alignParentTop="true"
                    android:onClick="MenuButtonPressed"
                    android:background="@drawable/qu_orange_background"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:visibility="visible"
                    android:textColor="#ffffff" />
                <Button
                    android:layout_height="40dp"
                    android:layout_width="0dp"
                    android:text="SETTINGS"
                    android:id="@+id/settings_menu_button"
                    android:layout_alignParentTop="true"
                    android:onClick="MenuButtonPressed"
                    android:background="@drawable/qu_orange_background"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="5dp"
                    android:textColor="#ffffff" />
            </TableRow>
        </TableLayout>
    </LinearLayout>
</RelativeLayout>
